<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="20.0">
               <children>
                  <Label text="Host name" />
                  <TextField fx:id="hostNameTextField" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" spacing="20.0">
               <children>
                  <Label text="database name" />
                  <TextField fx:id="databaseNameTextField" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" spacing="20.0">
               <children>
                  <Label text="user name" />
                  <TextField fx:id="uesrNameTextField" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" spacing="20.0">
               <children>
                  <Label text="password" />
                  <TextField fx:id="passwordTextField" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="okButton" mnemonicParsing="false" text="Ok" />
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
         </children>
      </HBox>
   </bottom>
</fx:root>
