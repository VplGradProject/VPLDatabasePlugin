<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label contentDisplay="CENTER" text="column name" />
                  <VBox fx:id="tableColumnsNameVBox" prefHeight="200.0" prefWidth="100.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="type" />
                  <VBox fx:id="tableColumnsTypeVBox" prefHeight="200.0" prefWidth="100.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="size" />
                  <VBox fx:id="tableColumnsSizeVBox" prefHeight="200.0" prefWidth="100.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Propeties" />
                  <VBox fx:id="tablePropertiesVBox" prefHeight="200.0" prefWidth="100.0" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <top>
      <HBox fx:id="headerHBox" alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Table Name:" />
            <Label fx:id="tableNameLabel" text="Table Name" />
         </children>
      </HBox>
   </top>
   <bottom>
      <Button mnemonicParsing="false" onAction="#addColumnAction" text="add" BorderPane.alignment="CENTER" />
   </bottom>
</fx:root>
